<Window x:Class="WpfApp1.EmployeeSchedulePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:WpfApp1"
    Title="Employee Schedule">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Заголовок -->
        <TextBlock Text="График работы сотрудников" Margin="10" FontSize="20" FontWeight="Bold"/>

        <!-- Панель для отображения списка сотрудников -->
        <ScrollViewer Grid.Row="1">
            <StackPanel x:Name="EmployeesStackPanel" Margin="10"/>
        </ScrollViewer>
        <Button Content="Экспорт в Word" Click="ExportToWord_Click" HorizontalAlignment="Right" Margin="10" Grid.Row="2"/>

    </Grid>
    
</Window>
