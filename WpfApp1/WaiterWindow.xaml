<Window x:Class="WpfApp1.WaiterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Официант" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" Width="800" Margin="20">
                <WrapPanel Width="800" Height="auto" x:Name="orderBoard">
                    <!-- Order items will be added here -->
                </WrapPanel>
            </ScrollViewer>

            <Button Content="Создать заказ" Width="300" Padding="30 10" Height="60" Margin="20" VerticalAlignment="Top" Click="Login_Click" Background="#2C3E50" Foreground="White" FontSize="18"/>
        </StackPanel>
    </Grid>
</Window>