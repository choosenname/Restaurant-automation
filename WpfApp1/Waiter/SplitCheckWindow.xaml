<Window x:Class="WpfApp1.Waiter.SplitCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Разделить чек" Height="500" Width="300">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="stack" >

            <ListBox x:Name="listBox" Height="300"  Margin="10" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>

            <Button Content="Подтвердить" HorizontalAlignment="Center" Margin="0,10" Click="Confirm_Click" Width="auto" Height="30" Padding="20 0" VerticalAlignment="Top" Background="#2C3E50" Foreground="White"/>
        </StackPanel>
    </ScrollViewer>
</Window>