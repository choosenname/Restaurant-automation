<Window x:Class="WpfApp1.Waiter.SplitCheckWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Разделить чек" Height="600" Width="400"
        WindowState="Maximized">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="stack" >

            <ListBox x:Name="listBox" Height="400" Margin="20" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" FontSize="18"/>

            <Button Content="Подтвердить" HorizontalAlignment="Center" Margin="0,20" Click="Confirm_Click" Width="auto" Height="60" Padding="30 0" VerticalAlignment="Top" Background="#2C3E50" Foreground="White" FontSize="20"/>
        </StackPanel>
    </ScrollViewer>
</Window>