<Window x:Class="WpfApp1.SystemAdmin.AddDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.SystemAdmin"
        mc:Ignorable="d"
        Title="AddDish"  Height="280" Width="300"
WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel  Margin="20">
            <TextBlock Text="Название блюда:"/>
            <TextBox x:Name="txtName" Margin="0 5"/>

            <TextBlock Text="Цена блюда"/>
            <TextBox x:Name="txtPrice" Margin="0 5"/>

            <TextBlock Text="Категория блюда:"/>
            <StackPanel Orientation="Horizontal">
                <ComboBox x:Name="typeComboBox" Width="218" HorizontalAlignment="Left" Margin="0 0 0 0"/>
                <Button Margin="5 0" Content="+" Width="20" Height="20" Background="Black" Foreground="White" FontWeight="Bold" Click="Button_Click"/>
            </StackPanel>


            <Button Content="Добавить" Width="100" Height="30" Margin="0,15,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Click="Add_Click" Background="#2C3E50" Foreground="White"/>

        </StackPanel>
    </Grid>
</Window>
