<Window x:Class="WpfApp1.SystemAdmin.AddCategory"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.SystemAdmin"
        mc:Ignorable="d"
        Title="AddCategory" Height="200" Width="200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Label Content="Название:" FontSize="26"></Label>
            <TextBox x:Name="txtName" FontSize="20" Margin="5 10"/>
            <Button Content="Добавить" Width="auto" Padding="20 10" Height="auto" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" Click="Add_Click" Background="#2C3E50" Foreground="White"/>

        </StackPanel>
    </Grid>
</Window>
