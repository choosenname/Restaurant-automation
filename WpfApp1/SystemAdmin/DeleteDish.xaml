<Window x:Class="WpfApp1.SystemAdmin.DeleteDish"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.SystemAdmin"
        mc:Ignorable="d"
        Title="Удаление блюда"  Height="300" Width="400"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <ListBox ItemsSource="{Binding DishDeletes}" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <CheckBox Content="{Binding Info}" IsChecked="{Binding IsSelected}" Margin="5"/>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <Button Content="Удалить" Click="Delete_Click" HorizontalAlignment="Center" VerticalAlignment="Bottom" Width="auto" Padding="15 0" Height="30" Margin="0,15,0,20"  Background="#2C3E50" Foreground="White"/>

        </StackPanel>
    </Grid>
</Window>
