<Window x:Class="WpfApp1.SystemAdmin.AllEmployees"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1.SystemAdmin"
        mc:Ignorable="d"
        Title="AllEmployees" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel VerticalAlignment="Top">
            <Label Content="Сотрудники" FontSize="26" FontWeight="Bold"/>
            <DataGrid x:Name="dataGrid"  AutoGenerateColumns="False" Height="auto" CanUserAddRows="false" IsReadOnly="True" >
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Id" Binding="{Binding Id}" Width="Auto" />

                    <DataGridTextColumn Header="Имя" Binding="{Binding Name}" Width="*" />

                    <DataGridTextColumn Header="Роль" Binding="{Binding EmployeeType.Name}" Width="*" />
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Window>
